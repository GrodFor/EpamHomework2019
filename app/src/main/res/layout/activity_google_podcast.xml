<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GooglePodcastsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_podcasts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <ImageView
            android:id="@+id/tv_header_title"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/podcasts_logo"
            android:visibility="visible" />
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.GridLayout
        android:id="@+id/podcasts_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_podcasts"
        android:background="@android:color/white"
        app:columnCount="4"
        app:useDefaultMargins="true">

        <RelativeLayout
            android:id="@+id/relative_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_columnWeight="1">

            <ImageView
                android:id="@+id/imageView_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/podlodka" />

            <TextView
                android:id="@+id/textView_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="8dp"
                android:background="@drawable/new_label"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="@string/new_text_line"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_columnWeight="1">

            <ImageView
                android:id="@+id/imageView_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/fragmented" />

            <TextView
                android:id="@+id/textView_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="8dp"
                android:background="@drawable/new_label"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="@string/new_text_line"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            grid:layout_columnSpan="1"
            grid:layout_columnWeight="1"
            grid:layout_gravity="fill_horizontal">

            <ImageView
                android:id="@+id/imageView_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/apptractor" />

            <TextView
                android:id="@+id/textView_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="8dp"
                android:background="@drawable/new_label"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="@string/new_text_line"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            grid:layout_columnSpan="1"
            grid:layout_columnWeight="1"
            grid:layout_gravity="fill_horizontal">

            <ImageView
                android:id="@+id/imageView_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/podcast_one" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            grid:layout_columnSpan="1"
            grid:layout_columnWeight="1"
            grid:layout_gravity="fill_horizontal">

            <ImageView
                android:id="@+id/imageView_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/androidcentral" />

            <TextView
                android:id="@+id/textView_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="8dp"
                android:background="@drawable/new_label"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="@string/new_text_line"
                android:textColor="@android:color/white" />
        </RelativeLayout>

    </android.support.v7.widget.GridLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/podcasts_grid"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/for_you_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:text="@string/for_you"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/for_you_text"
                app:tabIndicator="@drawable/tab_indicator"
                app:tabIndicatorColor="@color/colorPrimary"
                app:tabIndicatorFullWidth="false"
                app:tabPaddingEnd="5dp"
                app:tabPaddingStart="5dp"
                app:tabSelectedTextColor="@color/colorPrimary"
                app:tabTextAppearance="@style/TextAppearance.AppCompat.Body1">

                <android.support.design.widget.TabItem
                    android:id="@+id/tabItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="New episodes" />

                <android.support.design.widget.TabItem
                    android:id="@+id/tabItem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="In progress" />

                <android.support.design.widget.TabItem
                    android:id="@+id/tabItem3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Download" />
            </android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/tabLayout" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>