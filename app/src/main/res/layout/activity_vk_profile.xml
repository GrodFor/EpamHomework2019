<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".VkProfileActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav_view"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/profile_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/avatar_profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/avatar_profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/avatar" />

                    <TextView
                        android:id="@+id/avatar_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/avatar_profile_online"
                        android:layout_marginLeft="16dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/android_pie"
                        android:textColor="@android:color/white"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/avatar_profile_online"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/avatar_profile_image"
                        android:layout_alignParentBottom="false"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="@string/online"
                        android:textColor="#B3FFFFFF" />

                    <ImageView
                        android:id="@+id/avatar_online_icon"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_below="@+id/avatar_profile_name"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_toRightOf="@+id/avatar_profile_online"
                        app:srcCompat="@drawable/ic_smartphone" />

                    <ImageView
                        android:id="@+id/avatar_profile_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/avatar_profile_online"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        app:srcCompat="@drawable/ic_camera" />
                </RelativeLayout>

                <Button
                    android:id="@+id/edit_profile_button"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/rounded_button"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/edit"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/status_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp">

                    <ImageView
                        android:id="@+id/status_profile_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_dialog" />

                    <TextView
                        android:id="@+id/status_profile_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/status_profile_image"
                        android:text="@string/hello_google" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/friends_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp">

                    <ImageView
                        android:id="@+id/friends_profile_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_friends" />

                    <TextView
                        android:id="@+id/friends_profile_count_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/friends_profile_image"
                        android:fontFamily="sans-serif-medium"
                        android:text="88" />

                    <TextView
                        android:id="@+id/friends_profile_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="16dp"
                        android:layout_toLeftOf="@+id/first_friend_friends_profile"
                        android:layout_toRightOf="@+id/friends_profile_count_text"
                        android:text="@string/friends" />

                    <ImageView
                        android:id="@+id/first_friend_friends_profile"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="false"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2dp"
                        android:layout_toLeftOf="@+id/second_friend_friends_profile"
                        app:srcCompat="@drawable/friend_first" />

                    <ImageView
                        android:id="@+id/second_friend_friends_profile"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="false"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2dp"
                        android:layout_toLeftOf="@+id/third_friend_friends_profile"
                        app:srcCompat="@drawable/friend_second" />

                    <ImageView
                        android:id="@+id/third_friend_friends_profile"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/friend_third" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/subscribers_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/subscribers_profile_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_subscribers" />

                    <TextView
                        android:id="@+id/subscribers_profile_count_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/subscribers_profile_image"
                        android:fontFamily="sans-serif-medium"
                        android:text="79" />

                    <TextView
                        android:id="@+id/subscribers_profile_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="16dp"
                        android:layout_toRightOf="@+id/subscribers_profile_count_text"
                        android:text="@string/subs" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/location_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp">

                    <ImageView
                        android:id="@+id/location_profile_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_location" />

                    <TextView
                        android:id="@+id/location_profile_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/location_profile_image"
                        android:text="@string/city" />

                    <TextView
                        android:id="@+id/location_profile_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="16dp"
                        android:layout_toRightOf="@+id/location_profile_text"
                        android:text="@string/Grodno" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/education_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/education_profile_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_education" />

                    <TextView
                        android:id="@+id/education_profile_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/education_profile_image"
                        android:text="@string/grsu" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/show_more_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/show_more_profile_dots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_more_horiz" />

                    <TextView
                        android:id="@+id/show_more_profile_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/show_more_profile_dots"
                        android:text="@string/show_more"
                        android:textColor="@color/colorPrimary" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/whats_new_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/whats_new_image"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:srcCompat="@drawable/avatar_round" />

                <TextView
                    android:id="@+id/whats_new_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/whats_new_image"
                    android:text="@string/what_new" />

                <ImageView
                    android:id="@+id/whats_new_add_photo"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_toLeftOf="@+id/whats_new_add_history"
                    app:srcCompat="@drawable/ic_image" />

                <ImageView
                    android:id="@+id/whats_new_add_history"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    app:srcCompat="@drawable/ic_camera_new" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/photos_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/photos_horizontal_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/foto"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/photos_horizontal_count_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/photos_horizontal_text"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@+id/photos_horizontal_text"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/_5" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/photos_horizontal_text"
                    android:layout_alignLeft="@+id/photos_horizontal_text"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/photo_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/photo_1" />

                        <ImageView
                            android:id="@+id/photo_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/photo_2" />

                        <ImageView
                            android:id="@+id/photo_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/photo_3" />

                        <ImageView
                            android:id="@+id/photo_four"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/photo_4" />

                        <ImageView
                            android:id="@+id/photo_five"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            app:srcCompat="@drawable/photo_5" />

                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_nav_view"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        app:elevation="8dp"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/menu_bottom_navigation" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar" />
</RelativeLayout>